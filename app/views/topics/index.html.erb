<div class="page-header">
  <h1 class="text-center">All Blockmarks</h1>
</div>
<% if policy(@topics).create? %>
  <p><%= link_to "Create Topic", new_topic_path, class: 'btn btn-success' %></p>
<% end %>
<br>
<div class="container">
  <div class="row">
    <% @topics.each do |topic| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <p><%= link_to topic.title, topic %>
              <% if policy(topic).destroy? %>
              - <%= link_to "Delete", topic, method: :delete, class: 'btn btn-danger btn-sm' %></p>
              <% end %>
            <br>
            <small>
              <% topic.bookmarks.each do |bookmark| %>
                <p><%= link_to bookmark.url, bookmark.url, :target => '_blank' %></p>
                <br>
              <% end %>
            </small>
          </h4>
        </div>
      </div>
    <% end %>
  </div>
</div>
