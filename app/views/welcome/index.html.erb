<div class="container">
  <div class="jumbotron">
    <h1 class="text-center">Blocmarks:</h1>
    <p class="text-center">Social Bookmarking With Email Integration</p>
    <p class="text-center">
      <% if user_signed_in? %>
        <%= link_to "Edit Profile", edit_user_registration_path, class: 'btn btn-info btn-lg' %>
        <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'btn btn-info btn-lg' %>
      <% else %>
        <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-info btn-lg" %>
        <%= link_to "Sign In", new_user_session_path, class: 'btn btn-info btn-lg' %>
      <% end %>
    </p>
  </div>
</div>
